{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es2017",
			"dom"
		],
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "node",
		"removeComments": false,
		"declaration": true,
		"inlineSources": false,
		"inlineSourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"strictBindCallApply": true,
		"allowJs": true
	},
	"include": [
		"./src/**/*"
	]
}